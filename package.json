{
  "name": "line-dispatcher",
  "version": "1.1.1",
  "description": "line dispacther",
  "author": "Pornchai R.",
  "private": true,
  "license": "BSD-3-Clause",
  "type": "commonjs",
  "scripts": {
    "preinstall": "npm install -g @nestjs/cli && npm install prisma@5.5.2 --save-dev",
    "build": "npx prisma generate && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:c2": "pm2 start -i 2 --name line-dispacther --max-memory-restart 500M nest -- start",
    "start-runtime:c2": "pm2-runtime start -i 2 --name line-dispacther --max-memory-restart 500M nest -- start",
    "start:c4": "pm2 start -i 4 --name line-dispacther --max-memory-restart 500M nest -- start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "loadtest": "artillery run ./loadtest/webhook-event.yml",
    "loadtest:300": "artillery run ./loadtest/webhook-event.300.yml",
    "loadtest:600": "artillery run ./loadtest/webhook-event.600.yml",
    "loadtest:1000": "artillery run ./loadtest/webhook-event.1000.yml",
    "prisma:migrate_deploy": "npx prisma migrate deploy --schema=./prisma/schema.prisma",
    "prisma:migrate_dev": "npx prisma migrate dev --schema=./prisma/schema.prisma"
  },
  "dependencies": {
    "@fastify/static": "^6.11.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/cqrs": "^10.2.6",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-fastify": "^10.2.6",
    "@nestjs/swagger": "^7.1.12",
    "@prisma/client": "^5.4.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "lru-cache": "^10.0.1",
    "node-interval-job": "^1.2.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.2.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prisma": "^5.5.2",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "ulidx": "^2.2.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
